<%= form_for(@box_count) do |f| %>

  <div class="field form-group new-form-group">
    <%= f.label :box_count, class: "capitalize" %>
    <%= f.text_field :box_count, class: "new-bc-text-field edit-bc-price form-control new-form-control" %>
  </div>
  <%= f.submit 'Submit', class: "btn small-btn-style" %>
<% end %>

<%= button_to 'Cancel', box_counts_path, method: :get, class: "btn small-btn-style cancel" %>

<%= form_for(@metal) do |f| %>

  <div class="field form-group new-form-group">
    <%= f.label :front %>
    <%= f.text_field :front, class: "new-bc-text-field edit-bc-price form-control new-form-control" %>
  </div>
  <div class="field form-group new-form-group">
    <%= f.label :back %>
    <%= f.text_field :back, class: "new-bc-text-field edit-bc-price form-control new-form-control" %>
  </div>
  <%= f.submit 'Submit', class: "btn small-btn-style" %>
<% end %>

<%= button_to 'Cancel', metals_path, method: :get, class: "btn small-btn-style cancel" %>


<h1 class="main-header">Listing Metals</h1>

<table class="table index-tables">
  <tbody>
    <% @metals.each do |metal| %>
      <tr>
        <td><%= metal.front %> / <%= metal.back %></td>
        <td class="text-right"><%= link_to 'Edit', edit_metal_path(metal) %> <%= link_to 'Destroy', metal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Metal', new_metal_path, method: :get, class: "btn-style" %>
